{
    "manifest_version": 2,
    "name": "arXiv-Sanity Adder",
    "description": "Adds a button to save arXiv pdfs to your arXiv-sanity library",
    "version": "1.0",
    "content_scripts": [{
        "matches": [
            "http://arxiv.org/pdf/*",
            "https://arxiv.org/pdf/*"
        ],
        "js": ["injector.js"],
        "run_at": "document_end",
        "all_frames": true
    }],
    "web_accessible_resources": ["arxiv_sanity.js"],
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "*://*.arxiv-sanity.com/*"
    ]
}
